<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,Log4net"/>
    <section name="server" type="US.OpenServer.Configuration.ServerConfigurationSectionHandler,OpenServerWindowsShared"/>
    <section name="protocols" type="US.OpenServer.Protocols.ProtocolConfigurationSectionHandler,OpenServerWindowsShared"/>
  </configSections>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2"/>
  </startup>

  <log4net>
    <root>
      <level value="ALL"/>
      <appender-ref ref="ConsoleAppender" />
      <appender-ref ref="RollingFileAppender"/>
    </root>

    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %thread %level - %message%newline"/>
      </layout>
    </appender>
    
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="client.log"/>
      <appendToFile value="true"/>
      <rollingStyle value="Size"/>
      <maxSizeRollBackups value="5"/>
      <maximumFileSize value="10MB"/>
      <staticLogFileName value="true"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %thread %level - %message%newline"/>
      </layout>
    </appender>
  </log4net>

  <server>
    <host value="localhost" />
    <port value="21843" />
    <tls value="false"
         certificate=""
         requireRemoteCertificate="true"
         allowSelfSignedCertificate="false"
         checkCertificateRevocation="true"
         allowCertificateChainErrors="false"/>
    <idleTimeout value="300" />
    <readTimeout value="120" />
    <writeTimeout value="120" />
  </server>

  <protocols>
    <item id="1" 
          assembly="KeepAliveProtocol.dll" 
          classPath="US.OpenServer.Protocols.KeepAlive.KeepAliveProtocol" />
    <item id="2" 
          assembly="WinAuthProtocolClient.dll" 
          classPath="US.OpenServer.Protocols.WinAuth.WinAuthProtocolClient" />
    <item id="10"
          assembly="HelloProtocolClient.dll"
          classPath="US.OpenServer.Protocols.Hello.HelloProtocolClient" />
  </protocols>

</configuration>
